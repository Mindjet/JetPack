<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="io.mindjet.jetdemo.view.activity.CuteCheckBoxActivity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/common_gap">

        <io.mindjet.jetwidget.QCheckBox
            android:id="@+id/checkbox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_gap_large"/>

        <io.mindjet.jetwidget.QCheckBox
            android:id="@+id/checkbox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_gap_large"
            app:borderColor="@color/black_translucent"
            app:checked="true"
            app:contentColor="@color/colorAccent"/>

        <io.mindjet.jetwidget.QCheckBox
            android:id="@+id/checkbox_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/common_gap_large"
            app:borderColor="@color/black_translucent"
            app:checked="true"
            app:contentColor="@color/colorAccent"/>


    </LinearLayout>

</layout>